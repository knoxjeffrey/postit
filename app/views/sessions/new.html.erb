<%= render 'shared/content_title', title: "Log In" %>

<div class="col-sm-8 well">
	<%= form_tag '/login' do %>

		<div class="form-group">
			<%= label_tag :username %>
			<%= text_field_tag :username, nil, class: "form-control" %>
		</div>
		
		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: "form-control" %>
		</div>
		<br/>
		<%= submit_tag 'Login', class: "btn btn-danger" %>
	<% end %>
</div>
